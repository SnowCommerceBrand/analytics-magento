<layout version="0.1.0">
    <default>
        <reference name="before_body_end">
            <block type="segmentio_segmentio/init" name="segmentio_init" template="segmentio/init.phtml" />
            <block type="segmentio_segmentio/track" name="segmentio_track" template="segmentio/track.phtml" />
        </reference>
    </default>

    <catalog_product_view>
        <reference name="before_body_end">
            <block type="core/template" name="segmentio_product" template="segmentio/product.phtml" after="segmentio_init"/>
        </reference>
    </catalog_product_view>

    <checkout_onepage_success>
        <reference name="before_body_end">
            <block type="segmentio_segmentio/onepage_success" name="segmentio_head_order_success" template="segmentio/checkout_success.phtml" after="segmentio_init"/>
        </reference>
    </checkout_onepage_success>
</layout>