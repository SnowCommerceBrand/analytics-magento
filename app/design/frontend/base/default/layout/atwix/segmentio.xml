<layout version="0.1.0">
    <default>
        <reference name="before_body_end">
            <block type="atwix_segmentio/init" name="atwix_segmentio_init" template="atwix_segmentio/init.phtml" />
            <block type="atwix_segmentio/track" name="atwix_segmentio_track" template="atwix_segmentio/track.phtml" />
        </reference>
    </default>

    <catalog_product_view>
        <reference name="before_body_end">
            <block type="core/template" name="atwix_segmentio_product" template="atwix_segmentio/product.phtml" after="atwix_segmentio_init"/>
        </reference>
    </catalog_product_view>

    <checkout_onepage_success>
        <reference name="before_body_end">
            <block type="atwix_segmentio/onepage_success" name="atwix_segmentio_head_order_success" template="atwix_segmentio/checkout_success.phtml" after="atwix_segmentio_init"/>
        </reference>
    </checkout_onepage_success>
</layout>