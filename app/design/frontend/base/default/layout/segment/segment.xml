<layout version="0.1.0">
    <default>
        <reference name="before_body_end">
            <block type="segment_analytics/init" name="segment_init" template="segment/init.phtml" />
            <block type="segment_analytics/track" name="segment_track" template="segment/track.phtml" />
        </reference>
    </default>

    <catalog_product_view>
        <reference name="before_body_end">
            <block type="core/template" name="segment_product" template="segment/product.phtml" after="segment_init"/>
        </reference>
    </catalog_product_view>

    <checkout_onepage_success>
        <reference name="before_body_end">
            <block type="segment_analytics/onepage_success" name="segment_head_order_success" template="segment/checkout_success.phtml" after="segment_init"/>
        </reference>
    </checkout_onepage_success>
</layout>